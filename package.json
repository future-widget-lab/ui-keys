{
  "name": "@future-widget-lab/ui-keys",
  "version": "0.1.0",
  "description": "A helper for creating render-friendly keys, useful for uniquely identifying resources, caching, testing, and rendering.",
  "license": "MIT",
  "author": "Carlos Lobo",
  "main": "dist/index.js",
  "module": "dist/create-ui-key.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/future-widget-lab/ui-keys.git"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/create-ui-key.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/create-ui-key.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "change-case": "5.4.4",
    "flatted": "^3.3.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "@tsconfig/recommended": "^1.0.8",
    "@tsconfig/vite-react": "^3.4.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "size-limit": "^11.1.6",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "ui-key",
    "react-key",
    "render-key",
    "deterministic-key",
    "unique-key",
    "cache-key",
    "testing-key",
    "identifier",
    "key-generator",
    "flatted",
    "object-key",
    "data-key",
    "serialization"
  ]
}